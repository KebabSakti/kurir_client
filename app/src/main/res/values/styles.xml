<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <!-- INTRO START -->
    <style name="intro">
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="intro_image">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/intro_logo</item>
        <item name="android:layout_width">186dp</item>
        <item name="android:layout_height">58dp</item>
    </style>
    <!-- INTRO END -->

    <!-- AUTH PAGE START -->
    <style name="auth_logo">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">193dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/ic_auth_logo</item>
    </style>
    <!-- Heading Spacing -->
    <style name="auth_heading_spacing">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>
    <!-- Heading Text -->
    <style name="auth_heading_text" parent="auth_heading_spacing">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- Sub Heading Text -->
    <style name="auth_sub_heading_text" parent="auth_heading_spacing">
        <item name="android:textSize">12sp</item>
    </style>
    <!-- Button Parent -->
    <style name="auth_button_dimen" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
    </style>
    <!-- White Button Text -->
    <style name="auth_button_text_style_parent" parent="auth_button_dimen">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <!-- Login and Register Button -->
    <style name="auth_login_reg_button" parent="auth_button_text_style_parent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/auth_login_button</item>
    </style>
    <!-- Social Login Button -->
    <style name="auth_social_login_button" parent="auth_button_dimen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">@dimen/d_24</item>
        <item name="android:layout_marginLeft">@dimen/d_24</item>
        <item name="android:layout_marginEnd">@dimen/d_24</item>
        <item name="android:layout_marginRight">@dimen/d_24</item>
        <item name="android:paddingStart">@dimen/d_12</item>
        <item name="android:paddingLeft">@dimen/d_12</item>
        <item name="android:paddingRight">@dimen/d_12</item>
        <item name="android:paddingEnd">@dimen/d_12</item>
    </style>
    <!-- AUTH PAGE END -->

</resources>
